<%= form_with model: @snack, local: true do |form| %>
 
    <% if @snack.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@snack.errors.count, "error") %> 
            prohibited this snack from being saved:
        </h2>
        <ul>
            <% @snack.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    
    <p>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </p>
    
    <p>
        <%= form.label :price %><br>
        <%= form.text_area :price %>
    </p>
    
    <p>
        <%= form.submit %>
    </p>
    
<% end %>